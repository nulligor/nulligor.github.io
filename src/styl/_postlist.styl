.page_posts
    .tree-posts
        display block
        width 100%
.tree-posts
    padding-top: 43px
    width 347px
    height 100%
    position fixed
    background-color hover
    overflow-y auto
    top 0
    +below(rem(1450px))
        display none
 
    h3
        font-size rem(25px)
        text-align center
        color sec
        position relative
        margin rem(10px) 0
        &:before
            content ""
            width 110px
            height 2px
            position absolute
            bottom 0
            background-color sec
    h2
        font-size rem(20px)
        text-align center
        color lighten(main, 20%)
        position relative
        margin rem(15px) 0
.post-item
    text-align left
    padding rem(5px) rem(20px)
    position relative
    .content
        cf();
        text-align center
        border none
        stack()
        a
            text-decoration none
        .date
            color main
        .post-title
            color sec
            position relative
            padding 0
            font-size rem(16px)
            margin 0
            text-align center
            &.selected
                background main
            &:hover
                background-color mainHover
            +above(cut)
                text-align left
                margin-left rem(-10px)
                display initial
                font-size rem(17px)
                text-decoration none